{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "CommonJS",
    "target": "es2019",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowUnreachableCode": false
  },
  "include": [
    "./src",
    "../src/js/shared-with-server/"
  ]
}
